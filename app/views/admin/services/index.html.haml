%h1.mt-2 Services (Admin)

.form.mb-5.mt-3
  %h2 Add a new service
  = form_with model: Service.new, url: admin_services_path, method: :post do |f|
    = f.text_field :base_url, class: 'form-control text_field', placeholder: 'Base URL'
    = f.submit 'Add', class: 'btn btn-primary ml-2'


%table.table
  %thead
    %tr
      %th Name
      %th Description
      %th URL
      %th
  %tbody
    - @services.each do |service|
      %tr
        %td= service.name
        %td= service.description
        %td= link_to service.base_url, service.base_url
        %td= link_to 'delete', admin_service_path(service), method: :delete
